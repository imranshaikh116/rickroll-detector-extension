{
  "manifest_version": 3,
  "name": "Advanced Phishing & Rickroll Detection",
  "description": "Scans links, blocks Rickrolls, detects phishing, and gives a safety score.",
  "version": "2.0",

  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "tabs",
    "notifications",
    "storage"
  ],

  "host_permissions": [
    "*://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Security Status"
  },

  "icons": {
    "48": "icons/icon.png"
  }
}
